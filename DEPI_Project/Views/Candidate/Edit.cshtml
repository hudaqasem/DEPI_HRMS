@model Candidate
@{
    ViewData["Title"] = "Edit Candidate";
    Layout = "_testLayout";
}

<form asp-action="SaveEdit" asp-controller="Candidate" asp-route-id="@Model.Id">

    <partial name="FormCandidatePartial" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $('#jobSelect').on('change', function () {
            var jobId = $(this).val();
            if (jobId) {
                $.ajax({
                    url: '/YourControllerName/GetJobDetails?jobId=' + jobId,
                    type: 'GET',
                    success: function (data) {
                        if (data) {
                            $('#jobType').val(data.jobType);
                            $('#jobRole').val(data.role);
                        } else {
                            $('#jobType').val('');
                            $('#jobRole').val('');
                        }
                    }
                });
            } else {
                $('#jobType').val('');
                $('#jobRole').val('');
            }
        });
    </script>
}



