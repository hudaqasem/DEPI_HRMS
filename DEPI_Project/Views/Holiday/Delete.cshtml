
@model DEPI_Project.Models.CorpMgmt_System.Holiday
@{
    ViewData["Title"] = "Delete Holiday";
    Layout = "_testLayout";
}
<link href="/css/prostyle.css" rel="stylesheet" />

<div class="container my-4">
    <!-- Page Title -->
    <div class="page-title d-flex align-items-center">
        <i class="fas fa-trash fa-lg text-danger"></i>
        <span>Delete Holiday</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this holiday record?
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Holiday Name</label>
                        <div class="form-control-plaintext">@Model.HolidayName</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Created By</label>
                        <div class="form-control-plaintext">@Model.AppUser?.FirstName</div>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Start Date</label>
                        <div class="form-control-plaintext">@Model.StartDate.ToString("MM/dd/yyyy")</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">End Date</label>
                        <div class="form-control-plaintext">@Model.EndDate.ToString("MM/dd/yyyy")</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Duration</label>
                        <div class="form-control-plaintext">@Model.HolidayDuration day(s)</div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <form asp-action="SaveDelete" method="post">
                    <input type="hidden" name="id" value="@Model.HolidayId" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash me-2"></i>Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title {
        font-size: 28px;
        font-weight: bold;
        border-bottom: 2px solid #dc3545;
        padding-bottom: 5px;
        margin-bottom: 15px;
        color: #333;
    }

        .page-title i {
            margin-right: 10px;
        }
</style>
