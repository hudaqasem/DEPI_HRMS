@model ProjectViewModel

       
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="fw-semibold mb-1">Project Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter project name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Budget" class="fw-semibold mb-1">Budget</label>
                    <input asp-for="Budget" class="form-control" type="number" step="0.01" min="0" required />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>

            </div>

            <div class="row mb-3">

    <div class="col-md-6">
        <label class="form-label">Assigned Employees</label>
        <div class="row">
            @foreach (var emp in (List<SelectListItem>)ViewBag.EmpList)
            {
                <div class="col-md-6">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="ProjectEmployees" value="@emp.Value" id="@emp.Value" @(Model.ProjectEmployees.Contains(emp.Value) ? "checked" : "") />
                        <label class="form-check-label" for="@emp.Value">@emp.Text</label>
                    </div>
                </div>
            }
        </div>
        <span asp-validation-for="ProjectEmployees" class="text-danger"></span>
    </div>

                <div class="col-md-6">
                    <label asp-for="Description" class="fw-semibold mb-1">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter project description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="StartDate" class="fw-semibold mb-1">Start Date</label>
                    <input asp-for="StartDate" class="form-control" type="date" id="Project_StartDate" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DueDate" class="fw-semibold mb-1">Due Date</label>
                    <input asp-for="DueDate" class="form-control" type="date" id="Project_DueDate" required />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ManagerId" class="form-label">Project Manager</label>
                    <select asp-for="ManagerId" asp-items="ViewBag.ManagerList" class="form-select">
                        <option value="0">-- Select --</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" asp-items="ViewBag.DepartmentList" class="form-select">
                        <option value="0">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>


            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Priority" class="fw-semibold mb-1">Priority</label>
                    <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<DEPI_Project.Models.CorpMgmt_System.PriorityLevel>()" required>
                        <option value="">-- Select Priority --</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Status" class="fw-semibold mb-1">Status</label>
                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<DEPI_Project.Models.CorpMgmt_System.ProjectStatus>()" required>
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <button type="submit" class="btn btn-primary px-4" id="saveButton">
                    <i class="fas fa-save me-2"></i>Save
                </button>
            </div>
       
