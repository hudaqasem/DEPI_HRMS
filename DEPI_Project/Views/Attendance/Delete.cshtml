@model DEPI_Project.Models.CorpMgmt_System.Attendance
@{
    ViewData["Title"] = "Delete Attendance";
    Layout = "_testLayout";
}
<link href="/css/prostyle.css" rel="stylesheet" />

<div class="container my-4">
    <!-- Page Title -->
    <div class="page-title d-flex align-items-center">
        <i class="fas fa-trash fa-lg text-danger"></i>
        <span>Delete Attendance</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this attendance record?
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Employee Name</label>
                        <div class="form-control-plaintext">@Model.Employee?.FirstName</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Date</label>
                        <div class="form-control-plaintext">@Model.Date.ToString("MM/dd/yyyy")</div>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Time In</label>
                        <div class="form-control-plaintext">@Model.TimeIn.ToString(@"hh\:mm")</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Time Out</label>
                        <div class="form-control-plaintext">@Model.TimeOut.ToString(@"hh\:mm")</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Status</label>
                        <div class="form-control-plaintext">
                            @if (Model.Status.ToString() == "Present")
                            {
                                <span class="badge-status active">Present</span>
                            }
                            else if (Model.Status.ToString() == "Absent")
                            {
                                <span class="badge-status inactive">Absent</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <form asp-action="SaveDelete" method="post">
                    <input type="hidden" name="id" value="@Model.AttendanceId" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash me-2"></i>Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title {
        font-size: 28px;
        font-weight: bold;
        border-bottom: 2px solid #dc3545;
        padding-bottom: 5px;
        margin-bottom: 15px;
        color: #333;
    }

        .page-title i {
            margin-right: 10px;
        }

    .badge-status {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-block;
        min-width: 80px;
    }

        .badge-status.active {
            background-color: #dff5e7;
            color: #28a745;
        }

        .badge-status.inactive {
            background-color: #fdeeee;
            color: #dc3545;
        }
</style>