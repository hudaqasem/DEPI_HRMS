@model List<Performance>
@{
    ViewData["Title"] = "Performance";
    Layout = "_EmpLayout";
}

<link href="/css/prostyle.css" rel="stylesheet" />

<div class="container my-4 ">
    <!-- Page Title -->
    <div class="page-title d-flex align-items-center">
        <i class="fas fa-users fa-lg"></i>
        <span>Performance</span>
    </div>
    <!-- Toolbar فوق الجدول -->
    <div class="d-flex justify-content-between align-items-center px-3 py-2" style="background-color: #e9f0fc; border-top-left-radius: 8px; border-top-right-radius: 8px;">
        <div class="d-flex align-items-center gap-2">
            <i class="fas fa-search text-secondary"></i>
            <input type="text" id="searchInput" class="form-control" placeholder="Search" style="width: 250px;">
        </div>

        <div class="d-flex align-items-center gap-3">
            <a asp-action="ExportToExcel" class="btn btn-primary circle-btn" title="Download Excel">
                <i class="fas fa-download"></i>
            </a>

            <a asp-action="Add" asp-controller="Performance" class="btn btn-success circle-btn" title="Add New">
                <i class="fas fa-plus"></i>
            </a>

            <!-- زر الحذف المخفي -->
            <button id="deleteSelectedBtn" type="submit" class="btn p-0 d-none btntable">
                <img src="/image/delete.png" alt="Delete" />
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive" style="overflow-x: auto;">
        <table class="table table-hover align-middle text-center" style="min-width: 1600px;">
            <thead class="table-light">
                <tr>
                    <th style="min-width: 60px;">
                        <input type="checkbox" id="select-all" />
                    </th>
                    <th style="min-width: 150px;">Review</th>
                    <th style="min-width: 150px;">Date</th>
                    <th style="min-width: 150px;">Description</th>
                    <th style="min-width: 150px;">Employee</th>
                    <th style="min-width: 150px;">Task</th>
                    <th style="min-width: 150px;">Manager</th>
                    <th style="min-width: 100px;">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="prow">
                        <td><input type="checkbox" class="row-checkbox" /></td>
                        <td>@(item.Review)</td>
                        <td>@(item.Date.ToString("MM/dd/yyyy"))</td>
                        <td>@(item.Description)</td>
                        <td>@(item.EmployeeId)</td>
                        <td>@(item.TaskId)</td>
                        <td>@(item.ManagerId)</td>
                        <td>
                            <div class="d-flex align-items-center justify-content-center">
                                <a asp-action="Edit" asp-controller="Performance" asp-route-id="@item.PerformanceId" class="btn p-0 me-2" style="cursor: pointer;">
                                    <img src="/image/edit.png" alt="Edit" />
                                </a>

                                <form asp-action="Delete" asp-route-id="@item.PerformanceId" method="post" onsubmit="return confirmDelete(event)">
                                    <button type="submit" class="btn p-0" style="border: none; background: none; padding: 0; cursor: pointer;">
                                        <img src="/image/delete.png" alt="Delete" />
                                    </button>
                                </form>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            <!-- Pagination will be dynamically generated by JavaScript -->
        </ul>
    </nav>
</div>

@* <partial name="DetailsPartial" /> *@

@section Scripts {

    <script src="/js/empscript.js"></script>
    <script src="/js/Pagination.js"></script>
    <partial name="AlertScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
}
<style>

    .page-title {
        font-size: 28px;
        font-weight: bold;
        border-bottom: 2px solid #007bff;
        padding-bottom: 5px;
        margin-bottom: 15px;
        color: #333;
    }

        .page-title i {
            margin-right: 10px;
            color: #007bff;
        }

    .btntable {
        border: none;
        background: none;
        padding: 0;
        cursor: pointer;
    }

    .circle-btn {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0;
        font-size: 20px;
        text-align: center;
    }

    .btn-primary.circle-btn {
        background-color: #007bff;
        border: none;
    }

    .btn-success.circle-btn {
        background-color: #28a745;
        border: none;
    }

    table tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

